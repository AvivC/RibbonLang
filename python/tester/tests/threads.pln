test threads calling shared functions
    q = { takes y, name to
        print("In y")
        print(name)
        if y == 0 {
            return y * y
        }
        return y * q(y - 1, name)
    }

    f = { takes x, name to 
        print("In f")
        return x * q(x, name)
    }

    t1 = {
        print("Running t1")
        f(5, "t1")
        print("Done t1")
    }

    t2 = {
        print("Running t2")
        f(8, "t2")
        print("Done t2")
    }

    spawn(t2)
    f(3, "main")
    spawn(t1)

    print("Done main thread")
