test recursion
    factorial = { | n |
        if n == 1 {
            return n
        }
        return n * factorial(n - 1)
    }

    print(factorial(4))
expect
    24
end

test function_calls
    f1 = { | x |
        print("f1")
        return x * 10
    }
    f2 = { | x |
        print("f2")
        return f1(x) * 10
    }
    f3 = { | x |
        print("f3")
        return f2(x) * 10
    }
    print(f3(8))
expect
    f3
    f2
    f1
    8000
end

test fuction_calls_multi_arg
    divide = {| x, y |
        print("In function divide")
        return x / y
    }
    print(divide(20, 5))
expect
    In function divide
    4
end

test function_as_argument
    f1 = {| f2 |
