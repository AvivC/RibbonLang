test higher order closures
    concat = { | value, concat_fn |
        result = concat_fn(value)
        print(result)
    }

    concat_factory = { | x |
        return { | y |
            return x + " " + y
        }
    }

    concat_hello = concat_factory("hello")
    concat_hi = concat_factory("hi")

    concat("Aviv", concat_hello)
    concat("Aviv", concat_hi)
expect
    hello Aviv
    hi Aviv
end

test closure semantics
    outer = {
        x = "original"
        middle = {
            inner = {
                print(x)
            }
            x = "something else"
            return inner
        }
        x = "updated"
        return middle
    }

    m = outer()
    i = m()
    i()
expect
    something else
end

test closure with arguments
    outer = {| x |
        middle = {
            inner = {
                return x
            }
            x = "something else"
            return inner
        }
        x = "updated"
        return middle
    }

    m = outer("original")
    i = m()
    print(i())
expect
    something else
end

