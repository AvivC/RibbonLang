test string interning
    import _testing

    same = _testing.same_object

    a = "s1"
    b = "s2"
    c = "s1"
    d = a + b
    e = "s1" + "s2"
    f = "" + d

    print(same(a, c))
    print(same(d, e))
    print(same(f, d))
    print(same(f, e))

    print(same(a, b))

    a = "s2"
    print(same(a, b))
expect
    true
    true
    true
    true
    false
    true
end

